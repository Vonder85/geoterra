---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import EngagementCard from '../components/contact/EngagementCard.astro';
import ChecklistItem from '../components/ChecklistItem.astro';
import Faq from "../components/contact/Faq.astro";
import ContactForm from '../components/contact/ContactForm.astro';
---

<Layout title="Contact - GEOTERRA" description="Contactez GEOTERRA pour vos études géotechniques en Vendée et Loire-Atlantique. Devis sous 48h, rapport sous 10 jours. Maison individuelle et petits collectifs." keywords="contact, devis géotechnique, bureau d'étude, géotechnique, étude de sol, Vendée, Loire-Atlantique">
  <Header />

  <main>
    <Hero
      title="Contactez <span class='text-accent-500'>GEOTERRA</span>"
      description="Vous souhaitez obtenir un devis ou en savoir plus ? Contactez-nous dès aujourd'hui !<br><strong>Devis sous 48h • Intervention sous 15 jours • Rapport sous 10 jours</strong>"
    />

    <!-- Contact Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="lg:grid lg:grid-cols-2 lg:gap-16">

          <!-- Formulaire de contact -->
          <div>
            <ContactForm />
          </div>

          <!-- Informations de contact -->
          <div class="mt-12 lg:mt-0">
            <div class="space-y-8">
              <!-- Nos engagements -->
              <div class="bg-gradient-to-br from-primary-50 to-accent-50 rounded-lg p-8">
                <h3 class="text-xl font-bold text-neutral-800 mb-6">Nos engagements GEOTERRA</h3>
                <div class="space-y-4">
                  <EngagementCard
                    title="Devis sous 48h maximum"
                    description="Réactivité garantie pour votre projet"
                    icon="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    colorClass="primary"
                  />
                  <EngagementCard
                    title="Intervention sous 15 jours"
                    description="Après validation du devis"
                    icon="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    colorClass="accent"
                  />
                  <EngagementCard
                    title="Rapport final sous 10 jours"
                    description="Après intervention sur site"
                    icon="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                    colorClass="secondary"
                  />
                </div>
              </div>

              <!-- Coordonnées -->
              <div class="bg-gray-50 rounded-lg p-8">
                <h3 class="text-xl font-bold text-neutral-800 mb-6">Nos coordonnées</h3>
                <div class="space-y-4">
                  <div class="flex items-start">
                    <div class="bg-primary-100 p-2 rounded-full mr-4">
                      <svg class="h-5 w-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-medium text-neutral-800">Téléphone</h4>
                      <p class="text-neutral-600">
                        <a href="tel:+33686082100" class="hover:text-accent-600 transition-colors">
                            06 86 08 21 00
                        </a>
                          {" "} | {" "}
                          <a href="tel:+33686156546" class="hover:text-accent-600 transition-colors">
                              06 86 15 65 46
                        </a>
                      </p>
                    </div>
                  </div>

                  <div class="flex items-start">
                    <div class="bg-primary-100 p-2 rounded-full mr-4">
                      <svg class="h-5 w-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <h4 class="font-medium text-neutral-800">Email</h4>
                      <p class="text-neutral-600">
                        <a href="mailto:contact@geoterra.fr" class="hover:text-accent-600 transition-colors">
                          contact@geoterra.fr
                        </a>
                      </p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="bg-gray-50 rounded-lg p-8">
                <h3 class="text-xl font-bold text-neutral-800 mb-6">Notre zone d'intervention</h3>
                <ul class="space-y-3">
                  <ChecklistItem
                    textPrimary="Vendée (85)"
                    textSecondary="- Toutes communes"
                    colorClass="accent"
                  />
                  <ChecklistItem
                    textPrimary="Loire-Atlantique (44)"
                    textSecondary="- Toutes communes"
                    colorClass="accent"
                  />
                </ul>
                <div class="mt-4 p-4 bg-primary-50 rounded-lg">
                  <p class="text-sm text-neutral-700">
                    <strong>25 ans d'expertise locale</strong><br>
                    Vincent MENUET et Maxime ROBIN connaissent parfaitement la géologie de ces territoires pour des études précises et adaptées.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

      <Faq/>

    <section class="py-20 bg-gradient-to-r from-accent-500 to-accent-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Service clé en main de A à Z
        </h2>
        <p class="text-xl text-accent-100 mb-8 leading-relaxed">
          Du premier contact jusqu'à la remise du rapport, nous gérons votre étude de sol de A à Z pour vous garantir un service clé en main et démarrer votre construction sur des bases solides.
        </p>
        <a href="#" onclick="document.querySelector('form').scrollIntoView({behavior: 'smooth'})" class="bg-white text-accent-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-100 transition-colors inline-block shadow-lg">
          Demander un devis maintenant
        </a>
      </div>
    </section>
  </main>

  <Footer />


</Layout>