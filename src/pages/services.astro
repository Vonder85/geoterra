---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Methodology from '../components/services/Methodology.astro';
import MissionsSection from '../components/services/MissionsSection.astro';
import DetailedMissionsSection from '../components/services/DetailedMissionsSection.astro';
---

<Layout title="Nos services - GeoTerra" description="Découvrez tous nos services géotechniques : étude G1, G2, G5, missions d'investigation. Expertise et méthodologie rigoureuse pour tous vos projets." keywords="services géotechniques, étude G1, G2, G5, fondations, sondages">
  <Header />

  <main>
    <Hero
      title="Nos <span class='text-primary-500'>services géotechniques</span>"
      description="De l'achat du terrain à la construction de votre maison, nous couvrons toutes les étapes de votre projet avec une expertise géotechnique de pointe."
    />

    <Methodology />

    <MissionsSection />

    <DetailedMissionsSection />

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-neutral-800 to-neutral-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
          Prêt à démarrer votre projet ?
        </h2>
        <p class="text-xl text-neutral-300 mb-8 max-w-3xl mx-auto leading-relaxed">
          Contactez GEOTERRA dès aujourd'hui pour obtenir votre devis personnalisé sous 48h maximum.
          Nos experts vous accompagnent de A à Z dans votre étude géotechnique.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-primary-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-600 transition-colors shadow-lg">
            Obtenir un devis gratuit
          </a>
          <a href="/entreprise" class="border-2 border-primary-500 text-primary-400 px-8 py-4 rounded-lg font-semibold hover:bg-primary-500 hover:text-white transition-colors">
            Découvrir l'entreprise
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>