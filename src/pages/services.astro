---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import Methodology from "../components/services/Methodology.astro";
import MissionsSection from "../components/services/MissionsSection.astro";
import DetailedMissionsSection from "../components/services/DetailedMissionsSection.astro";

const servicesJsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "Service",
    name: "Services géotechniques GEOTERRA",
    provider: {
      "@type": "LocalBusiness",
      name: "GEOTERRA",
      url: "https://be-geoterra.fr",
    },
    areaServed: [
      {
        "@type": "State",
        name: "Vendée",
      },
      {
        "@type": "State",
        name: "Loire-Atlantique",
      },
    ],
    serviceType: "Études géotechniques",
    description:
      "GEOTERRA propose des études géotechniques complètes pour la maison individuelle et les petits collectifs : études G1, G2, G5, missions d'investigation et dimensionnement de fondations.",
    hasOfferCatalog: {
      "@type": "OfferCatalog",
      name: "Services géotechniques",
      itemListElement: [
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Service",
            name: "Étude géotechnique G1",
            alternateName: ["Étude de sol G1", "Analyse de sol G1", "Reconnaissance géotechnique G1"],
            description: "Étude préalable pour évaluer la faisabilité du projet et identifier les risques géotechniques du terrain",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Service",
            name: "Étude géotechnique G2",
            alternateName: ["Étude de sol G2", "Analyse des sols G2", "Dimensionnement fondations"],
            description: "Étude de conception pour dimensionner précisément les fondations de votre construction",
          },
        },
        {
          "@type": "Offer",
          itemOffered: {
            "@type": "Service",
            name: "Étude géotechnique G5",
            alternateName: ["Étude de sol G5", "Diagnostic géotechnique", "Expertise sol existant"],
            description: "Diagnostic géotechnique d'un bâtiment existant pour identifier les pathologies",
          },
        },
      ],
    },
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        name: "Accueil",
        item: "https://be-geoterra.fr",
      },
      {
        "@type": "ListItem",
        position: 2,
        name: "Services",
        item: "https://be-geoterra.fr/services",
      },
    ],
  },
];
---

<Layout
  title='Nos services géotechniques - Études de sol G1 G2 G5 - GeoTerra'
  description="Découvrez tous nos services géotechniques : étude G1, G2, G5, missions d'investigation, analyse de sol, dimensionnement de fondations. Expertise et méthodologie rigoureuse pour tous vos projets en Vendée et Loire-Atlantique."
  keywords='services géotechniques, services geotechniques, geo-technique, geo technique, étude G1, etude G1, étude G2, etude G2, étude G5, etude G5, fondations, fondation, sondages, sondage, analyse sol, analyse de sol, analyse du sol, étude des sols, reconnaissance sol, reconnaissance de sol, dimensionnement fondations, étude géotechnique préalable, investigation géotechnique, investigation geotechnique, essais sol, essai sol, mission géotechnique, mission geotechnique'
  jsonLd={servicesJsonLd}
>
  <Header />

  <main>
    <Hero
      title="Nos <span class='text-accent-500'>services géotechniques</span>"
      description="De l'achat du terrain à la construction de votre maison, nous couvrons toutes les étapes de votre projet avec une expertise géotechnique de pointe."
    />

    <Methodology />

    <MissionsSection />

    <DetailedMissionsSection />

    <!-- CTA Section -->
    <section class='py-10 bg-gradient-to-r from-accent-500 to-accent-600'>
      <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center'>
        <h2 class='text-3xl lg:text-4xl font-bold text-white mb-6'>
          Prêt à démarrer votre projet ?
        </h2>
        <p
          class='text-xl text-accent-100 mb-8 max-w-3xl mx-auto leading-relaxed'
        >
          Contactez GEOTERRA dès aujourd'hui pour obtenir votre devis
          personnalisé sous 48h maximum. Nos experts vous accompagnent de A à Z
          dans votre étude géotechnique.
        </p>
        <div class='flex flex-col sm:flex-row gap-4 justify-center'>
          <a
            href='/contact'
            class='bg-white text-accent-600 px-8 py-4 rounded-lg font-semibold hover:bg-primary-100 transition-colors shadow-lg'
          >
            Obtenir un devis gratuit
          </a>
          <a
            href='/entreprise'
            class='border-2 border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-accent-600 transition-colors'
          >
            Découvrir l'entreprise
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
