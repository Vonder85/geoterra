---
export interface Props {
  id: string;
  name: string;
  label: string;
  required?: boolean;
  className?: string;
}

const {
  id,
  name,
  label,
  required = false,
  className = ''
} = Astro.props;

const checkboxClasses = "mt-1 h-4 w-4 text-accent-600 focus:ring-accent-500 border-gray-300 rounded";
const finalCheckboxClasses = className ? `${checkboxClasses} ${className}` : checkboxClasses;
---

<div class="flex items-start">
  <input
    type="checkbox"
    id={id}
    name={name}
    required={required}
    class={finalCheckboxClasses}
  />
  <label for={id} class="ml-2 text-sm text-neutral-600" set:html={label}></label>
</div>