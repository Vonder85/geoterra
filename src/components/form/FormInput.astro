---
export interface Props {
  type?: 'text' | 'email' | 'tel' | 'password';
  id: string;
  name: string;
  label: string;
  placeholder?: string;
  required?: boolean;
  className?: string;
}

const {
  type = 'text',
  id,
  name,
  label,
  placeholder,
  required = false,
  className = ''
} = Astro.props;

const baseClasses = "w-full px-4 py-3 border border-neutral-300 bg-neutral-50 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 focus:bg-white transition-colors";
const finalClasses = className ? `${baseClasses} ${className}` : baseClasses;
---

<div>
  <label for={id} class="block text-sm font-medium text-neutral-700 mb-2">
    {label} {required && <span class="text-red-500">*</span>}
  </label>
  <input
    type={type}
    id={id}
    name={name}
    placeholder={placeholder}
    required={required}
    class={finalClasses}
  />
</div>