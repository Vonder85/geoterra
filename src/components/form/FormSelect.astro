---
export interface Props {
  id: string;
  name: string;
  label: string;
  options: Array<{ value: string; label: string; }>;
  required?: boolean;
  placeholder?: string;
  className?: string;
}

const {
  id,
  name,
  label,
  options,
  required = false,
  placeholder = "SÃ©lectionnez une option",
  className = ''
} = Astro.props;

const baseClasses = "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-accent-500 transition-colors";
const finalClasses = className ? `${baseClasses} ${className}` : baseClasses;
---

<div>
  <label for={id} class="block text-sm font-medium text-neutral-700 mb-2">
    {label} {required && <span class="text-red-500">*</span>}
  </label>
  <select
    id={id}
    name={name}
    required={required}
    class={finalClasses}
  >
    <option value="">{placeholder}</option>
    {options.map((option) => (
      <option value={option.value}>{option.label}</option>
    ))}
  </select>
</div>