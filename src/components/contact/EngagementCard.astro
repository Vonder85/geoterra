---
export interface Props {
  title: string;
  description: string;
  icon: string;
  colorClass?: 'primary' | 'accent' | 'secondary' | 'neutral';
}

const { title, description, icon, colorClass = 'primary' } = Astro.props;

const colorClasses = {
  primary: 'bg-primary-300 text-primary-700',
  accent: 'bg-accent-300 text-accent-700',
  secondary: 'bg-secondary-300 text-secondary-700',
  neutral: 'bg-neutral-300 text-neutral-700'
};

const iconColorClass = colorClasses[colorClass];
---

<div class="flex items-center">
  <div class={`${iconColorClass.split(' ')[0]} p-3 rounded-full mr-4`}>
    <svg class={`h-6 w-6 ${iconColorClass.split(' ')[1]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}/>
    </svg>
  </div>
  <div>
    <div class="font-bold text-neutral-800">{title}</div>
    <div class="text-sm text-neutral-600">{description}</div>
  </div>
</div>