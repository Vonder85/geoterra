---
export interface Props {
  title: string;
  description: string;
  icon?: string;
  iconSrc?: string;
  iconAlt?: string;
  colorClass?: 'primary' | 'accent' | 'secondary' | 'neutral';
}

const { title, description, icon, iconSrc, iconAlt, colorClass = 'accent' } = Astro.props;

const colorClasses = {
  primary: 'bg-primary-100 text-primary-500',
  accent: 'bg-accent-100 text-accent-500',
  secondary: 'bg-secondary-100 text-secondary-500',
  neutral: 'bg-neutral-200 text-neutral-600'
};

const iconColorClass = colorClasses[colorClass];
---

<div class="flex items-center">
  <div class={`${iconColorClass.split(' ')[0]} p-2 rounded-full mr-4`}>
    {iconSrc ? (
      <img class="h-6 w-6" src={iconSrc} alt={iconAlt || title} />
    ) : (
      <svg class={`h-6 w-6 ${iconColorClass.split(' ')[1]}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}/>
      </svg>
    )}
  </div>
  <div>
    <div class="font-semibold text-white">{title}</div>
    <div class="text-sm text-neutral-400">{description}</div>
  </div>
</div>