---
import ScrollReveal from "../ScrollReveal.astro";

export interface Props {
  title?: string;
  description?: string;
  missions?: Array<{
    title: string;
    subtitle?: string;
    description: string;
    features: string[];
    icon: string;
    colorClass: "primary" | "accent" | "secondary" | "neutral";
  }>;
  ctaText?: string;
  ctaLink?: string;
  className?: string;
}

const {
  title = "Nos missions géotechniques",
  description = "De l'achat du terrain à la construction de votre maison, nous couvrons toutes les étapes de votre projet",
  className = "py-6 bg-primary-50",
} = Astro.props;
---

<section class={className}>
  <div class='max-w-7xl mx-auto sm:px-6 lg:px-8'>
    <ScrollReveal delay={200}>
      <div class='text-center mb-16'>
        <h2 class='text-3xl lg:text-4xl font-bold text-neutral-800 mb-4'>
          {title}
        </h2>
        <p class='text-xl text-neutral-600 max-w-3xl mx-auto'>
          {description}
        </p>
      </div>
    </ScrollReveal>
  </div>
</section>
