---
import ChecklistItem from '../ChecklistItem.astro';

export interface Props {
  title: string;
  subtitle?: string;
  description: string;
  checklist?: string[];
  colorClass?: 'primary' | 'accent' | 'secondary' | 'neutral';
  className?: string;
}

const {
  title,
  subtitle,
  description,
  checklist = [],
  colorClass = 'accent',
  className = "bg-white border border-primary-200 rounded-lg p-8"
} = Astro.props;
---

<div class={className}>
  <h4 class="text-xl font-bold text-neutral-800 mb-4">{title}</h4>
  {subtitle && (
    <h5 class="text-lg font-medium text-neutral-700 mb-3">{subtitle}</h5>
  )}
  <p class="text-neutral-600 mb-4" set:html={description}></p>

  {checklist.length > 0 && (
    <ul class="space-y-2">
      {checklist.map((item) => (
        <ChecklistItem
          textSecondary={item}
          colorClass={colorClass}
        />
      ))}
    </ul>
  )}
</div>