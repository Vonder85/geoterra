---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  primaryCta?: {
    text: string;
    href: string;
  };
  secondaryCta?: {
    text: string;
    href: string;
  };
  backgroundClass?: string;
}

const {
  title,
  subtitle,
  description,
  primaryCta,
  secondaryCta,
  backgroundClass = "bg-gradient-to-br from-primary-50 to-primary-100"
} = Astro.props;
---

<section class={`${backgroundClass} py-20`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-neutral-800 mb-6" set:html={title}></h1>
      {subtitle && (
        <p class="text-2xl font-semibold text-accent-500 mb-6">{subtitle}</p>
      )}
      {description && (
        <p class="text-xl text-neutral-600 max-w-3xl mx-auto leading-relaxed mb-8" set:html={description}></p>
      )}

      {(primaryCta || secondaryCta) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          {primaryCta && (
            <a
              href={primaryCta.href}
              class="bg-accent-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-accent-600 transition-colors text-center shadow-lg"
            >
              {primaryCta.text}
            </a>
          )}
          {secondaryCta && (
            <a
              href={secondaryCta.href}
              class="border-2 border-accent-500 text-accent-600 px-8 py-4 rounded-lg font-semibold hover:bg-accent-500 hover:text-white transition-colors text-center"
            >
              {secondaryCta.text}
            </a>
          )}
        </div>
      )}

      <slot />
    </div>
  </div>
</section>