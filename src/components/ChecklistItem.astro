---
export interface Props {
  textPrimary?: string;
  textSecondary?: string
  colorClass?: 'primary' | 'accent' | 'secondary' | 'neutral';
}

const { textPrimary, textSecondary, colorClass = 'accent' } = Astro.props;

const colorClasses = {
  primary: 'text-primary-500',
  accent: 'text-accent-500',
  secondary: 'text-secondary-500',
  neutral: 'text-neutral-600'
};

const checkColorClass = colorClasses[colorClass];
---

<li class="flex items-center">
  <svg class={`h-4 w-4 ${checkColorClass} mr-2`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
  </svg>
  <strong>{textPrimary}</strong> {textSecondary}
</li>